alignment bottom_right
background yes
border_width 1
# cpu_avg_samples 2
default_color FFFFFF
default_outline_color FFFFFF
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades yes
use_xft yes
xftfont Sans Mono:size=8
gap_x 5
gap_y 0
# minimum_size 1260 6
maximum_width 1260
# net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window no
own_window_class Conky
own_window_type desktop
own_window_transparent no
stippled_borders 0
update_interval 5.0
uppercase no
use_spacer left
show_graph_scale no
show_graph_range no
format_human_readable yes

color1 FFFFFF
color2 FF8888
color3 FFFFFF

# mpd_host 127.0.0.1

TEXT
${color2}${exec sed -e "s@.*/home/\(.*\)/.ccache/.*.tmp\.\(.*\)@\1 \2@" /var/log/distccd.log | tail -n 1}${color} \
${color1}Activity on /dev/sda:${color} ${diskiograph 5,50 000000 ff0000 -t} \
${color1}Load: ${loadavg}${color} ${color1}|${color} \
${color1}RAM:${color} ${memperc}% ${membar 2,50}
